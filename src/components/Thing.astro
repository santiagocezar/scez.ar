---
import CoolButton from "./CoolButton.astro";

export interface Props {
    name: string;
    src: string;
    alt: string;
    "logo-src"?: string;
    "action-href"?: string;
    action?: string;
}

const {
    name,
    src,
    alt,
    "logo-src": logoSrc,
    "action-href": actionHref = "#",
    action,
} = Astro.props;
---

<div class="featured-card">
    <img src={src} alt={alt} class="preview" />
    <div class="content">
        {
            logoSrc ? (
                <img src={logoSrc} alt={name} class="title" />
            ) : (
                <h1 class="title">{name}</h1>
            )
        }
        <p>
            <slot />
        </p>
    </div>
    {
        action && actionHref && (
            <CoolButton href={actionHref}>{action}</CoolButton>
        )
    }
</div>

<style lang="less">
    .featured-card {
        display: grid;
        grid-template:
            "content preview" 18rem
            / 50% 50%;

        color: #040624;
        background-color: white;
        width: 100%;
        max-width: 900px;
        margin-bottom: 1rem;

        .preview {
            grid-area: preview;
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: top;
            mask: linear-gradient(to right, transparent, black);
            -webkit-mask: linear-gradient(to right, transparent, black);
        }
        .content {
            grid-area: content;
            font-size: 1.5rem;
            padding: 2em;
            padding-right: 0;
            .title {
                font-size: 1.8em;
                height: 1.2em;
            }
        }

        :global(.cool-button) {
            grid-area: preview;
            align-self: end;
            justify-self: end;
            margin: 1rem;
            z-index: 1;
        }
        @media screen and (max-width: 768px) {
            margin-bottom: 4rem;
            grid-template:
                "content" min-content
                "preview" 18rem
                / auto;

            .content {
                padding: 2rem;
                font-size: 1.2rem;
            }
            .preview {
                mask: unset;
                -webkit-mask: unset;
            }
        }
    }
</style>
