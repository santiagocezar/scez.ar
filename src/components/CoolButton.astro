---
export interface Props {
    href?: string;
}

const { href } = Astro.props;
---

<a href={href} class="cool-button"> <slot /></a>

<style lang="less">
    a {
        color: inherit;
        text-decoration: none;
        font-weight: 900;
        font-size: 30px;
        color: white;
        background-color: #040624;
        padding: 8px;
        transition: box-shadow 0.2s ease;
        &:hover {
            box-shadow: -0.4em 0.2em #ff4294, 0.4em -0.2em #18d1ff;
        }
    }
</style>
