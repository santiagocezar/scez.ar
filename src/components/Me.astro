---
import { Content as Prompt } from "./me.md";
---

<div class="root">
    <div class="img"></div>
    <div class="text">
        <Prompt />
    </div>
</div>

<style>
    .root {
        display: grid;
        margin: 0 auto;
        max-width: 60rem;
        font-size: 1.75rem;
        grid-template:
            ". i1 ." 1fr
            "t t i2" 4fr
            "t t ." 1fr
            / 2fr 1fr 2fr;
    }
    .text {
        grid-area: t;
        border: var(--black) solid 0.25rem;
        background-color: #87d9c7;
        color: var(--black);
        padding: 1em;
        border-radius: 1em;
        height: fit-content;
        min-height: fit-content;
    }
    .img {
        grid-area: i1-start / i1-start / i2-end / i2-end;
        border: var(--white) solid 0.25rem;
        background-image: url("/img/bg.webp");
        background-position: center;
        background-size: cover;
        border-radius: 1em;
        width: 100%;
        height: 100%;
    }
    @media screen and (max-width: 40rem) {
        .root {
            grid-template-rows: 0.5fr 2fr 1fr;
            grid-template-columns: 1fr 6fr 1fr;
            font-size: 1.5rem;
        }
    }
</style>
