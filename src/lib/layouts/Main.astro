---
import "$lib/styles/reset.css";
import "$lib/styles/global.css";

import Sidebar from "../components/Sidebar.astro";

interface Props {
    title?: string
}

const { title = "Santiago Cézar" } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta
        name="description"
        content="mi página personal! hola!"
        />
        <title>{title}</title>
        <!-- <link rel="stylesheet" href="index.css?v=090721" /> -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
        href="https://fonts.googleapis.com/css2?family=Barlow:wght@500;700&family=Montserrat:wght@400;700&display=swap"
        rel="stylesheet"
        />
    </head>

    <body>
        <Sidebar />
        <!--
            <a href="#proyectos" aria-label="Ir al contenido">
                <svg viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg" class="arrow">
                    <path stroke="#000" stroke-width="4" fill="none" d="M 16 16 L 32 32 L 48 16"></path>
                </svg>
            </a>
        -->

        <main>
            <slot />
        </main>
    </body>
</html>

<style>
body {
    display: grid;
    grid-template:
        "sidebar content"
        / auto 1fr;

    place-items: stretch;
}

main {
    --content-width: 60rem;
    --cols: 12;
    --wide-cols: 2;
    --col-w: calc(var(--content-width) / var(--cols));
    --pad-x: 3rem;

    display: grid;
    grid-template-columns:
        [body-start] minmax(var(--pad-x), 1fr)
        repeat(var(--wide-cols), [wide1-start] minmax(auto, var(--col-w)) [wide1-end])
        repeat(12, [col-start] minmax(auto, var(--col-w)) [col-end])
        repeat(var(--wide-cols), [wide2-start] minmax(auto, var(--col-w)) [wide2-end])
        minmax(var(--pad-x), 1fr) [body-end];

    align-content: start;

    & > :global(*) {
        grid-column: col-start 1 / col-end -1;
    }

    grid-row-start: 1;
    grid-area: content;

    box-sizing: border-box;
    width: 100%;

    margin: 0 auto;
    gap: 2rem 0;
    padding: 2rem 0 4rem 0;
}

@media screen and (max-width: 40rem) {
    main {
        padding: 1.25rem 0 1.25rem 0;
    }
}

@media screen and (max-width: 60rem) {
    body {
        grid-template:
            "sidebar" auto
            "content" auto
            / 1fr;
    }
    main {
        --content-width: 40rem;
        --pad-x: 1.25rem;
        --wide-cols: 1;
    }
}
</style>
