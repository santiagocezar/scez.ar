<style>
    header {
        grid-area: sidebar;
/*         background-color: var(--rose-4); */
        color: var(--text);


        height: calc(100vh + var(--zigzag-size));
        /* height: calc(100vh + var(--zigzag-size) * 2); */
        margin-top: calc(-1 * var(--zigzag-size));
        overflow: hidden;

        position: sticky;
        top: calc(-1 * var(--zigzag-size));

        filter: drop-shadow(.25rem .125rem 0 var(--pink-border));
    }

    .zigzag-effect {
        /* cool stuff from https://css-tricks.com/css-borders-using-masks/ */

        --angle: 90deg;
        --zigzag-border: var(--pink-border);
        --background: var(--pink-bg);

        mask-image: conic-gradient(
            from calc(270deg - var(--angle)/2) at calc(100%),
            #0000, #000 1deg calc(var(--angle) - 1deg), #0000 var(--angle)
        );
        mask-position: top right;
        mask-size: 100% calc(2 * var(--zigzag-size) * tan(var(--angle)/2));
        mask-repeat: repeat-y;

        background-color: var(--background);
/*
        background-image: conic-gradient(
            from calc(270deg - var(--angle)/2) at calc(100% - 2px),
            var(--zigzag-border),
            var(--background) 1deg calc(var(--angle) - 1deg),
            var(--zigzag-border) var(--angle)
        );
        background-position: right;
        background-size: 100% calc(2*var(--zigzag-size));
        background-repeat: repeat-y;*/

/*
        background:
            conic-gradient(
                from calc(90deg - var(--angle)/2) at 2px,
                var(--zigzag-border),
                var(--background) 1deg calc(var(--angle) - 1deg),
                var(--zigzag-border) var(--angle)
            ) left /100% calc(2*var(--zigzag-size)) repeat-y;*/
    }

    .layout {
        display: grid;
        grid-template:
            "logo" calc(7 * var(--zigzag-size))
            "nav" 1fr
            "link" auto
            / 1fr;

        place-items: center;

        padding-top: var(--zigzag-size);
        height: 100%;
    }

    .title {
        grid-area: logo;
        font-size: 0.75rem;
/*         justify-self: start; */
    }

    .logo {
/*         background-color: var(--rose-4); */
        color: var(--blue3);
        overflow: hidden;
        line-height: 1;
        display: flex;
        align-items: center;
        font-family: var(--title-font);
        font-size: 3em;

        grid-area: 1 / 1 / 3 / 3;

        & h1 {
            font-size: 1em;
            font-weight: 700;
            text-indent: .33em;
        }

        & svg {
            height: 2em;
        }
    }
    .tag {
        font-size: 1.5em;
    }
    nav {
        grid-area: nav;
        align-self: start;
        width: 100%;
        text-align: right;

        & a {
            display: flex;
            align-items: center;
            justify-content: space-between;
            text-decoration: none;
            font-size: 1.1em;
            font-weight: bold;
            font-family: var(--title-font);
            padding: 0 2rem 0 1.5rem;
            gap: 0.5rem;
            background-repeat: space;
            border-bottom: 1px dashed var(--pink-border);
            position: relative;
            height: calc(3 * var(--zigzag-size));

            &:first-child {
                border-top: 1px dashed var(--pink-border);
            }

            &::before {
                content: '';
                position: absolute;
                inset: 0;
                background-color: var(--blue-bg);
                z-index: -1;

                filter: blur(50px);
                opacity: 0;
                transition: filter .2s ease, opacity .2s ease;
            }
            &:hover::before {
                filter: blur(0);
                opacity: 1;
            }
        }
    }

    .links {
        grid-area: link;
        border: 1px dashed var(--pink-border);
        border-radius: .5rem;
        align-self: end;
        display: flex;
        margin: 1rem;

        & hr {
            display: block;
            height: 1rem;
            border: none;
            align-self: center;
/*             border-left: 1px solid var(--rose-1); */
        }

        & a {
            text-decoration: none;
            display: block;
            padding: .75rem 1rem;

            svg {
                width: 2em;
                height: 2em;
            }

        }
    }

    @media screen and (max-width: 60rem) {
        header {
            height: auto;
            position: initial;
            margin: 0;
            filter: drop-shadow(.125rem .25rem 0 var(--pink-border));
        }
        .layout {
            height: auto;
            padding: 2rem;
            padding-bottom: calc(2rem + var(--zigzag-size));
        }
        .zigzag-effect {
            mask:
                conic-gradient(
                    from calc(var(--angle)/-2) at bottom,
                    #0000, #000 1deg calc(var(--angle) - 1deg), #0000 var(--angle)
                ) 50% / calc(2 * var(--zigzag-size) * tan(var(--angle)/2)) 100%;

        }
    }
    @media screen and (max-width: 60rem) {
        .layout {
            grid-template:
                "logo nav" auto
                "link nav" 1fr
                / 1fr auto;
            justify-items: start;
        }
        .links {
            margin: 0;
        }
    }
</style>
